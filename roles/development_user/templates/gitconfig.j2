[user]
  name = {{ user.fullname }}
  email = {{ user.email }}
[color]
  ui = true
[alias]
  aa = add --all
  r  = rebase
  au = add -u
  st = status
  d  = diff -w
  br = branch
  ca = commit --amend --gpg-sign
  ci = commit --verbose --gpg-sign
  fix = commit --amend --no-edit --gpg-sign
  boyscout = commit -m "Boyscout" --gpg-sign
  bs = commit -m "Boyscout" --gpg-sign
  co = checkout
  pf = push --force-with-lease
  lg = log --pretty=format:'%C(bold)â€“%Creset %C(red bold)%h%d%Creset | %C(green)%an%Creset | %C(magenta)%cr%Creset | %C(cyan)%s%Creset'
  lgr = log --pretty=format:'%s'
  lgp = log -p
  lgn = log --name-only
  cancel = reset "HEAD^"
  report-csv = "log --format='\"%cd\",\"%cn\",\"%s\"' --date=short --no-merges"
  ds = diff --staged
[pull]
  rebase = true
[difftool]
  prompt = false
[diff]
  algorithm = patience
  tool = vimdiff
[merge]
  tool = vimdiff
[credential]
  helper = cache
[core]
  autocrlf = input
  editor = vim
  whitespace = -trailing-space,-indent-with-non-tab,-tab-in-indent
