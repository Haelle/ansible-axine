server {
  listen 80;
  listen [::]:80;

  root /var/www/calibre-{{ calibre_name }};

  server_name {{ calibre_name }}.alxs.fr;

  location / {
    proxy_bind              $server_addr;
    proxy_pass              http://127.0.0.1:{{ calibre_port }};
    proxy_set_header        Host            $http_host;
    proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header        X-Scheme        $scheme;
    proxy_set_header        X-Script-Name   /calibre-{{ calibre_name }};
  }
}
